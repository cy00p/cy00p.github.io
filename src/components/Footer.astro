---
import { getConfigurationCollection } from "../lib/utils";
import Anchor from "./common/Anchor.astro";
import Section from "./common/Section.astro";

const { data: config } = await getConfigurationCollection();
---

<footer class="mt-16 mb-8">
    <Section class="mb-4">
        <div
            class="zag-border-b zag-transition pb-4 flex justify-center sm:flex-row sm:flex-nowrap gap-8 sm:justify-center"
        >
            <div class="flex gap-4 px-4">
                {
                    config.personal.htbProfile && (
                        <Anchor
                            url={config.personal.htbProfile}
                            aria-label={`${config.personal.name} HackTheBox Profile`}
                        >
                            <svg
                                width="32"
                                height="32"
                                viewBox="0 0 24 24"
                                class="zag-fill zag-transition"
                                xmlns="http://www.w3.org/2000/svg"
                            >
